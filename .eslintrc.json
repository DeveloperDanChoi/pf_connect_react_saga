{
  // env는 eslint를 적용할 환경을 설정하는 부분, 어떤 환경에서 실행되는 코드인지 설정
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  // extends는 설정을 특정하는 문자열이거나 이전 설정을 확장하는 추가적인 설정에 대한 문자열 리스트
  "extends": [
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "airbnb-base"
  ],
  // parser는 코드를 ESLint에 맞게 파싱하기 위해 사용하는 것으로 값을 주지 않으면 default 'Espree'
  // parseOptions는 자바스크립트 지원 옵션을 설정하기 위한 부분, default EC5 지원
  // plugins는 사용하기 전 패키지 다운로드 필요
  // rules는 린트로 잡아낼 에러에 대한 규칙을 설정하는 부분, Eslint에는 built-in된 다양한 rules이 있고 직접 추가 가능
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
